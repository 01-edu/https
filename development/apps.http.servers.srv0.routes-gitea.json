{
  "handle": [
    {
      "handler": "subroute",
      "routes": [
        {
          "handle": [
            {
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": [
                    "max-age=31536000;"
                  ]
                }
              }
            },
            {
              "encodings": {
                "gzip": {},
                "zstd": {}
              },
              "handler": "encode"
            },
            {
              "handler": "reverse_proxy",
              "upstreams": [
                {
                  "dial": "{{CONTAINER}}:8081"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "match": [
    {
      "host": [
        "git.{{DOMAIN}}"
      ]
    }
  ],
  "terminal": true
}
